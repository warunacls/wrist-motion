<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wristmotion.scorelab.org.wristmotion" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />


        <activity
            android:name="wristmotion.scorelab.org.wristmotion.Handler.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="wristmotion.scorelab.org.wristmotion.Handler.Fragment"
            android:label="@string/action_about">
        </activity>


        <activity
            android:name="wristmotion.scorelab.org.wristmotion.Handler.Export"

            android:label="@string/action_export">
        </activity>

                <service android:name="wristmotion.scorelab.org.wristmotion.Handler.SensorTransmission">
                    <intent-filter>
                        <action
                            android:name="com.google.android.gms.wearable.BIND_LISTENER" />
                    </intent-filter>
                </service>

    </application>

</manifest>
